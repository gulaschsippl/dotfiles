" copy indentation from previous line
set autoindent

" automatically insert one extra level of indentation
set smartindent

" set width of <tab> character
set tabstop=2

" pressing <tab> will insert <softtabstop> space characters
set expandtab
set softtabstop=2

" a <tab> is interpreted as 2 spaces
set smarttab
set shiftwidth=2
